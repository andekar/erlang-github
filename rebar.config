{erl_opts,
 [
  {parse_transform, lager_transform},
  {src_dirs, ["src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record, debug_info
 ]
}.
{deps_dir, "deps"}.
{deps,
 [
  {lager, "2.*", {git, "https://github.com:basho/lager.git", "2.0.0"}},
  {jiffy, "0.*", {git, "https://github.com:davisp/jiffy.git", "0.11.3"}},
  {ibrowse, "4.*", {git, "https://github.com:cmullaparthi/ibrowse.git", "v4.2"}}
 ]
}.
{escript_incl_apps, [jiffy, ibrowse, aleppo]}.
